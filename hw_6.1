
//Вывести индексы нулевых элементов в одномерном массиве

#include <iostream>

using namespace std;
int main()
{
    int n;
    cin >> n;
    int* digits = new int[n];
    bool soo = false;
    for (int i = 0; i < n; ++i)
    {
        cin >> digits[i];
        if (digits[i] == 0)
        {
            soo = true;
        }
    }
    if (soo)
    {
        cout << " i: ";
        for (int i = 0; i < n; ++i)
        {
            if (digits[i] == 0)
            {
                if (soo)
                {
                    cout << i;
                    soo = false;
                    continue;
                }
                cout << ", " << i << " ";
            }
        }
        cout << "\b.";
    }
    else cout << "none";
    delete[]digits;
}
